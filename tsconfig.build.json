{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "es2020",
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
